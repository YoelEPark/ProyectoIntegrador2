<header class="main-header">
    <div class="container">
        <div class="row align-items-center"
        style="width: 1200px;">
            <div class="col-5 col-md-2">
                <a href="/" class="main-header_home-link">

                    <img src="/images/logopagina.png"
                    style="height: 100px;
                    width: 180px;
                    padding-left: 0px;
                    padding-right: 100px;"
                    >
                </a>
            </div>


            
            <div class="col-7 col-md-6">
                <form action="product/search/busqueda" method="GET" class="search-form">
                    <input type="text" name="search" placeholder="Buscar productos, marcas y más"
                        class="search-form_input">
                    <button type="submit" class="search-form_button"><i class="fas fa-search"></i></button>
                </form>
            
            </div>

            <div class="col-12 col-md-4">
                <a class="main-header_credit-link">
                    Todas los libros en un solo lugar!
                </a>
            </div>
        </div>

        <button class="btn-toggle-navbar">
            <i class="fas fa-bars"></i>
        </button>

        <nav class="main-navbar">
            <ul class="left-navbar">
                <li><a href="/">Todos los productos</a></li>
                <!-- solo logueado <li><a href="">Cargar productos</a></li> -->
            </ul>

            <ul class="right-navbar">
                <% console.log('En la vista') %>
                <% console.log(locals.name) %>
            
                <% if(locals.user){ %>
                  <h2>Hola: <%= locals.user.name %> </h2>
                <%}%>
                <% if(locals.user){ %>
                    <form action="/login/logout" method="POST">
                      <button type="submit">Logout</button>
                    </form>
                  <%}%>
                <li>
                    <a href="/register">Creá tu cuenta <i class="far fa-address-card"></i>
                    </a>
                </li>
                <li>
                    <a href="/login">Ingresá <i class="fas fa-sign-in-alt"></i></a>
                </li>
            </ul>
        </nav>
    </div>
</header>