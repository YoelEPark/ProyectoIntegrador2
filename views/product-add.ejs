<%- include('./partials/head') %> 

<body>
	<!-- Header -->
	<% if( user.log ){ %>
		<%- include('./partials/headerLogueado') %>
		<%} else { %>
		<%- include('./partials/header') %>
		<% } %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Agregar productos</h2>
				<% if(locals.errors){ %>
					<h2 style="color:red">
						<%= locals.errors.message %>
					</h2>
					<% } %>
			</div>
			<!-- Show the "ultimos" products -->
			<div class="container">
		<div class="row justify-content-md-center">
			<form class="register-form col-6" action="/product/add" method="POST" enctype="multipart/form-data">
				<label for="">Nombre:</label>
				<input type="text" name="bookName" placeholder="">
				<label for="">Genero:</label>
				<input type="text" name="bookGenre" placeholder="">
				<label for="">Descripci√≥n:</label>
				<input type="text" name="bookDescription" placeholder="">
				<label for="">Imagen:</label>
				<input type="file" name="bookImage" placeholder="">
				<button type="submit" class="btn-outline-dark">Enviar</button>
			</form>
		</div>
	</div>


	<!-- footer -->
	<%- include('./partials/footer') %> 
	<!-- /footer -->
</body>

</html>