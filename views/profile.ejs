<%- include('./partials/head') %> 
	<!-- Header -->
	<%- include('./partials/header') %> 
	<!-- /Header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="/images/logopagina.jpg" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					
					<h1 class="main-title"><%= user.username %> 
						<a href="/user/edit/<%= user.id %> ">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li>1554896256</li>
						<li>200 seguidores</li>
						<li>300 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			<% for( let index = 0; index < 4; index++ ) { %>
			
			
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/id/<%= product[index].id %>">
							<figure class="product-box_image">
								<img src="images/products/<%= product[index].img %> " alt="La Tia Cosima">
							</figure>
							<article class="product-box_data">
								<h2><%= product[index].productName %> </h2>
								<p><%= product[index].productDescription %></p>
							</article>
						</a>
					</section>
				</div>
				<% } %>
		
		</div>
	</div>
	<!-- /Mis productos -->


	<!-- footer -->
	<%- include("./partials/footer") %> 
	<!-- /footer -->
</body>	
</html>